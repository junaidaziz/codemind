# Production Environment Configuration for CodeMind
# Copy this file to .env.production and fill in the actual values

# ================================
# CORE APPLICATION SETTINGS
# ================================
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://codemind.app"
NEXT_PUBLIC_API_URL="https://codemind.app/api"
NEXT_PUBLIC_APP_NAME="CodeMind"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# ================================
# AUTHENTICATION & SECURITY
# ================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-32-chars-minimum"
NEXTAUTH_URL="https://codemind.app"

# JWT secrets (generate with: openssl rand -base64 64)
JWT_SECRET="your-jwt-secret-key"
JWT_REFRESH_SECRET="your-jwt-refresh-secret"

# ================================
# DATABASE CONFIGURATION
# ================================
# PostgreSQL connection string for production
DATABASE_URL="postgresql://username:password@host:port/database_name?sslmode=require"

# Connection pool settings
DATABASE_POOL_SIZE="20"
DATABASE_TIMEOUT="30000"

# ================================
# SUPABASE CONFIGURATION
# ================================
SUPABASE_URL="your-production-supabase-url"
SUPABASE_ANON_KEY="your-production-supabase-anon-key"
NEXT_PUBLIC_SUPABASE_URL="your-production-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-production-supabase-anon-key"

# ================================
# REDIS CACHE CONFIGURATION
# ================================
REDIS_URL="redis://username:password@host:port"
REDIS_TTL="3600"

# ================================
# OPENAI API CONFIGURATION
# ================================
OPENAI_API_KEY="your-production-openai-api-key"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS="4000"
OPENAI_TEMPERATURE="0.7"

# ================================
# FILE UPLOAD CONFIGURATION
# ================================
UPLOAD_MAX_SIZE="50000000"
ALLOWED_FILE_TYPES=".js,.ts,.jsx,.tsx,.py,.java,.cpp,.c,.go,.rs,.php,.rb,.swift,.kt,.scala,.clj,.hs,.ml,.fs,.ex,.elixir,.erl,.pl,.r,.m,.pas,.ada,.vb,.cs,.vbs,.ps1,.sh,.bash,.zsh,.fish,.lua,.nim,.cr,.d,.zig"

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_REQUESTS_PER_MINUTE="100"
RATE_LIMIT_MAX_BURST="20"

# ================================
# MONITORING & OBSERVABILITY
# ================================
# Sentry for error tracking
SENTRY_DSN="your-sentry-dsn-url"
SENTRY_ENVIRONMENT="production"
SENTRY_RELEASE="1.0.0"

# ================================
# ANALYTICS & TRACKING
# ================================
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
POSTHOG_KEY="your-posthog-api-key"

# ================================
# EXTERNAL API INTEGRATIONS
# ================================
# GitHub OAuth for authentication
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# ================================
# SECURITY CONFIGURATION
# ================================
SECURITY_HEADERS_ENABLED="true"
CSP_ENABLED="true"
HSTS_MAX_AGE="31536000"

# CORS configuration
CORS_ORIGINS="https://codemind.app"

# Encryption key (generate with: openssl rand -hex 32)
ENCRYPTION_KEY="your-32-byte-encryption-key-in-hex"

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL="info"
LOG_FORMAT="json"

# ================================
# FEATURE FLAGS
# ================================
ENABLE_ANALYTICS="true"
ENABLE_CHAT="true"
ENABLE_PROJECT_INDEXING="true"
ENABLE_BACKGROUND_JOBS="true"
ENABLE_RATE_LIMITING="true"
ENABLE_CACHING="true"

# ================================
# VERCEL CONFIGURATION
# ================================
VERCEL_URL="" # This is automatically set by Vercel
VERCEL_ENV="" # This is automatically set by Vercel

# ================================
# DEPLOYMENT INFO
# ================================
DEPLOYMENT_TIMESTAMP=""
DEPLOYMENT_VERSION=""
DEPLOYMENT_COMMIT_SHA=""